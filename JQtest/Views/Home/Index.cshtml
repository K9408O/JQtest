<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <title>JQuery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="/css/site.css" rel="stylesheet">

</head>
<body class="p-4">

    <div id="hoverTarget" class="mb-3">
        滑鼠移入此區塊
    </div>
    <hr />
    <button id="changeColorBtn" class="btn btn-primary">點我</button>
    <br />
    <div id="box1" class="color-box"></div>
    <div id="box2" class="color-box"></div>
    <div id="box3" class="color-box"></div>

    <script>

        //滑鼠移入移出
        $(document).ready(function () {
             $('#hoverTarget').on('mouseenter', function () {
               $(this).addClass('hovered');// class 在 CSS 裡定義了要顯示背景圖片
             }).on('mouseleave', function () {
               $(this).removeClass('hovered');//當滑鼠移出這個區塊時，移除 hovered 這個 class
             });
           });

        //三個方塊
        //設定一個方法讓三個方塊用變數產生顏色
        function getRandomColor() {
            const r = Math.floor(Math.random() * 256);//Math.floor去掉小數Math.randomt產生0~1的數字
            const g = Math.floor(Math.random() * 256);
            const b = Math.floor(Math.random() * 256);
            return `rgb(${r}, ${g}, ${b})`;
        }

        $('#changeColorBtn').click(function () {
          $('.color-box').each(function () {//.each()對每個 class為 color-box的元素跑一次回圈
            const randomColor = getRandomColor();
            $(this).css('background-color', randomColor);
          });
        });
    </script>

</body>
</html>
